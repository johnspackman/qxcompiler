{
	"targets": [
		{
			"type": "source",
			"outputPath": "output/source"
		},
		{
			"type": "hybrid",
			"outputPath": "output/hybrid"
		},
		{
			"type": "build",
			"outputPath": "output/build"
		}
	],
	
	"defaultTarget": "source",
	
	"locales": [ "en" ],
	
	"applications": [
		{
			"class": "testapp.Application",
			"theme": "qx.theme.Indigo",
			"name": "testapp"
		}
	],

	"environment": {
		"test.isFalse": false,
		"test.isTrue": true,
		"test.someValue": "some"
	},
	
    "bundle": {
       "include": [ "qx.*" ],
       "exclude": [ "qx.util.*" ]
    },
    
	"parts": {
		"boot": {
			"include": [ "testapp.*" ]
		},
        "pluginFramework": {
            "include": [ "testapp.pdk.*" ]
        },
        "utils": {
            "include": [ "testapp.utils.*" ]
        },
        "pluginOne": {
            "include": [ "testapp.plugins.PluginOne", "testapp.plugins.One*" ]
        },
        "pluginTwo": {
            "include": [ "testapp.plugins.PluginTwo", "testapp.plugins.Two*" ]
        }
	}
}