{
  "$schema": "https://raw.githubusercontent.com/qooxdoo/qooxdoo-compiler/master/resource/schema/v1/compile.json",
  "targets": [
    {
      "type": "source",
      "outputPath": "compiled/source",
      "bundle": {
        "include": "qx.*"
      }
    },
    {
      "type": "build",
      "outputPath": "compiled/build"
    }
  ],
  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "ignores": [
    "module.*",
	"process.*",
	"Promise.*",
	"require.*",
	"path.*",
	"args.*"
  ],
  "applications": [
    {
      "class": "qxl.apiviewer.Application",
      "theme": "qxl.apiviewer.Theme",
      "name": "apiviewer",
      "title": "Qooxdoo API Viewer",
	  "default": true,
      "environment": {
        "qx.icontheme": "Tango",
        "excludeFromAPIViewer": [
          "qxl.*",
          "qx.*"
        ],
        "includeToAPIViewer": [
          "qx.tool.*"
        ]
      },
      "include": [
        "qx.*",
		"qx.tool.*"
      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement",
        "qx.tool.compiler.util",
        "*.index"
      ]
    }
  ]
}